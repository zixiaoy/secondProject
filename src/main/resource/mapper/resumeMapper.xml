<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoy.dao.ResumeDao">

    <insert id="saveResume" parameterType="Resume">
        INSERT INTO resume(name,age,sex,education,tel,email,politics_status,department_id,position_id,
        expect_salary,experience,address,interest,speciality,intro,visitor_id) VALUES(#{name},#{age},
        #{sex},#{education},#{tel},#{email},#{politicsStatus},#{departmentId},#{positionId},#{expectSalary},
        #{experience},#{address},#{interest},#{speciality},#{intro},#{visitorId});
    </insert>

    <update id="updateResume" parameterType="Resume">
        UPDATE resume SET name=#{name},age=#{age},education=#{education},tel=#{tel},email=#{email},
        politics_status=#{politicsStatus},department_id=#{departmentId},position_id=#{positionId},
        expect_salary=#{expectSalary},experience=#{experience},address=#{address},interest=#{interest},
        speciality=#{speciality},intro=#{intro} WHERE id=#{id};
    </update>

    <select id="findResumeByVisitorId" parameterType="int" resultType="resume">
        SELECT * FROM resume WHERE visitor_id=#{visitorId};
    </select>

</mapper>