<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoy.dao.EmploDao">
    <insert id="saveEmplo" parameterType="Employee">
        INSERT INTO employee VALUES(#{id},#{name},#{password},#{rank},#{creaTime},#{departmentId},#{positionId});
    </insert>

    <update id="updateEmploByPassword">
        UPDATE employee set password=#{1} WHERE id=#{0};
    </update>

    <update id="updateEmploByRank">
        UPDATE employee set rank=#{1} WHERE id=#{0};
    </update>

    <update id="updateEmploByPosition">
        UPDATE employee set department_id=#{1},position_id=#{2} WHERE id=#{0};
    </update>

    <select id="findEmplo" resultType="Employee">
        SELECT * FROM employee WHERE name=#{0} AND password=#{1};
    </select>

    <select id="findEmploById" resultType="Employee">
        SELECT * FROM employee WHERE id=#{id};
    </select>

    <select id="findEmploByDepartmentId" resultType="Employee">
        SELECT * FROM employee WHERE department_id=#{departmentId};
    </select>

    <select id="findEmploByPositionId" resultType="Employee">
        SELECT * FROM employee WHERE position_id=#{positionId};
    </select>

    <select id="findAllEmplo" resultType="Employee">
        SELECT * FROM employee;
    </select>

    <delete id="delEmplo" parameterType="int">
        DELETE FROM employee WHERE id=#{id};
    </delete>

    <select id="findEmploByName" parameterType="String" resultType="Employee">
        SELECT * FROM employee WHERE name=#{name};
    </select>
</mapper>